<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table class="striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Show', [:admin, category], class: "waves-effect waves-light btn"%></td>
        <td><%= link_to 'Edit', edit_admin_category_path(category), class: "waves-effect waves-light btn" %></td>
        <td><%= link_to 'Destroy', [:admin, category], method: :delete, data: { confirm: 'Are you sure?' }, class: "waves-effect waves-light btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_admin_category_path , class: "waves-effect waves-light btn" %>
