<p id="notice"><%= notice %></p>

<h1>Suppliers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suppliers.each do |supplier| %>
      <tr>
        <td><%= supplier.name %></td>
        <td><%= link_to 'Show', [:admin, supplier] %></td>
        <td><%= link_to 'Edit', edit_admin_supplier_path(supplier) %></td>
        <td><%= link_to 'Destroy', [:admin, supplier], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Supplier', new_admin_supplier_path %>
