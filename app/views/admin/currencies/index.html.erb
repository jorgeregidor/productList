<p id="notice"><%= notice %></p>

<h1>Currencies</h1>

<table class="striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @currencies.each do |currency| %>
      <tr>
        <td><%= currency.name %></td>
        <td><%= currency.code %></td>
        <td><%= link_to 'Show', [:admin,currency], class: "waves-effect waves-light btn"  %></td>
        <td><%= link_to 'Edit', edit_admin_currency_path(currency), class: "waves-effect waves-light btn"  %></td>
        <td><%= link_to 'Destroy', [:admin,currency], method: :delete, data: { confirm: 'Are you sure?' }, class: "waves-effect waves-light btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Currency', new_admin_currency_path, class: "waves-effect waves-light btn"  %>
