<p id="notice"><%= notice %></p>

<table class="striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th>Category</th>
      <th>Price</th>
      <th>Currency</th>
      <th>Supplier</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.desc %></td>
        <td><%= product.category_name %></td>
        <td><%= product.price %></td>
        <td><%= product.currency_name %></td>
        <td><%= product.supplier_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

